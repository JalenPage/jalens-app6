<form method="GET">
	<br>
	<br>
	<br>
	Month (1-12)<br>
	<input name="month" type="number" min="1" max="12" value="<%= params['month'] %>" required> <br>
	<br>
	Day (1-31)<br>
	<input name="day" type="number" min="1" max="31" value="<%= params['day'] %>" required> <br>
	<br>
	Year (xxxx)<br>
	<input name="year" type="number" value="<%= params['year'] %>" required> <br>
	<br>

	<button type="submit">Submit</button> <br>
	<br>
</form>

<% if @holidays.any? %>	

	<% @holidays.each do |holiday| %>
		<ul>
			<li> <%= holiday["name"] %> is on <%= holiday["date"] %> </li>
		</ul>
	<% end %>
	

<% else %>

   Sorry, but we could not find any results.
<% end %>  
